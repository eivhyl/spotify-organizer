@import "./variables.pcss";

.modal {
    & .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: gray(100%, 10%);
    }

    & .content {
        position: absolute;
        padding: 1rem;
        border-radius: 0.5rem;    
        right: 3rem;
        background-color: var(--background);    
    }
}