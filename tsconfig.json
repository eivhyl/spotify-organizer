{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"noStrictGenericChecks": false,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es2016",
			"es2017"
		],
		"jsx": "react"
	},
	"include": [
		"./src/*",
		"./__tests__/**/*",
		"./node_modules/@types/spotify-api/index.d.ts",
		"./src/types/spotify.d.ts"
	]
}